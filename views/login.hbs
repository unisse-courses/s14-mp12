<div class="container-fluid bg" id="signin">
    <div class="row">
        <div class="col-3" id="si">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <img src="/img/recipeep-logo-blackorange.png" class="si-logo"/>
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" method="POST" action="/login">
                        <div class="form-label-group">
                            <label for="inputEmail"></label>
                            <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
                        </div>
                        <div class="form-label-group">
                            <label for="inputPassword"></label>
                            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                        </div>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" href="homepage">Sign in</button>
                        <hr class="my-4">
                        <a class="toRegister" href="register">Not yet registered?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>