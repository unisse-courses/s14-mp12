{{!-- NAVIGATION BAR - LOGGED IN 1 --}}

<div class="container-fluid fixed-top" id="header">
    <div class="row no-gutters navbar">
        {{!-- Navbar Start --}}
        <div class="col-2" id="header-logo">
            <a class="pull-left logo" href="/"><img src="/img/recipeep-logo-blackorange.png" data-toggle="tooltip" title="Home"></a>
        </div>
        {{!-- Search Bar --}}
        <div class="col-5" id="header-search">
            <form class="search-container" id="search-form" action="search">
                {{!-- Input Area --}}
                <input type="text" placeholder="Search for recipes." name="search">
                {{!-- Search Button --}}
                <button type="submit" data-toggle="tooltip" title="Search"><i class="fa fa-search"></i></button>
            </form>
        </div>
        {{!-- Create Post --}}
        <div class="col-3" id="header-create-post">
             <a href="/createPost" method="GET" class="btn">
                <button type="button">Create a post</button>
            </a>

            <img src="/img/vertical-line.png" class="vl" />
        </div>
        {{!-- Profile Picture --}}
        <div class="col-1" id="header-pfp">
            <button type="button" class="btn pull-right" data-toggle="tooltip" data-placement="bottom" title="Go to profile">
                <a class="pfp" href="/viewProfile"><img src="{{navProfPic}}"></a> 
            </button>
        </div>
        {{!-- Logout --}}
        <div class="col-1" id="header-logout" method="GET" action="/logout">
            <a href="/logout" class="pull-right btn">
                <button type="button">Logout</button>
            </a>
        </div>
    </div>
</div>