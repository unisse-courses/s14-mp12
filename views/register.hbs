{{#section 'scriptJQ'}}
    <script src="../../scripts/register.js"></script> 
    <link rel="stylesheet" href="/css/register.css">
{{/section}}


<div class="container-register" id="register">

    {{!-- REGISTER AREA --}}
    <div class="registerArea">

        {{!-- Header --}}
        <div class="headerArea">
            {{!-- Logo --}}
            <img src="img/recipeep-logo-blackorange.png" class="registerLogo">
        </div>
        <div class="headerArea">
            <div class="registerText">
                <p>Welcome to Recipeep!</p>
            </div>
        </div>

        {{!-- Register Form --}}
        <div class="registerForm">
            {{!-- Form Start --}}
            <form method="POST" action="/register" enctype="multipart/form-data">
                {{!-- Username --}}
                <div class="formRow">
                    <label for="inputUser" class="forLabels">Username</label>
                    <input type="text" id="username" name="username" class="formTextBox" placeholder="Username" required autofocus>
                    <hr>
                </div>

                {{!-- Email Address --}}
                <div class="formRow">
                    <label for="EmailAdress" class="forLabels">Email Address</label>
                    <input type="email" id="email" name="email" class="formTextBox" placeholder="Email Address" required>
                    <hr>
                </div>

                {{!-- Password --}}
                <div class="formRow">
                    <label for="inputPassword" class="forLabels">Password</label>
                    <input type="password" id="password" name="password" class="formTextBox password" placeholder="Password" required>
                    <hr>
                </div>

                <hr>

                {{!-- Image Upload --}}
                <div class="otherRow">
                    <label for="ProfilePicture" class="forLabels">Avatar Upload</label>
                    <input type="file" id="profPic" name ="profPic" accept="image/*">
                    <hr>
                </div>

                {{!-- Short Description --}}
                <div class="otherRow">
                    <label for="description" class="forLabels description">Short<br>Description<br>(Optional)</label>
                    <textarea type="text" id="description" name="description" class="description" placeholder="Short Description"></textarea>
                    <hr>
                </div>

                <hr>

                {{!-- Submit Button --}}
                <div class="formButton">
                    <button class="registerButton" type="submit">Register</button></a>
                </div>  
            </form>
        </div>

        {{!-- Redirect to Login --}}
        <div class="footLink">
            <a href="/">Already a Member?</a>
        </div>
    </div>
</div>