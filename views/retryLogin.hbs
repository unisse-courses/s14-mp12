{{#section 'headCSS'}}
    <link rel="stylesheet" href="../../css/login.css">
{{/section}}

{{#section 'scriptJQ'}}
    <script src="../../scripts/rlogin.js"></script>
{{/section}}

<div class="container-login" id="login">
    
    {{!-- LOGIN AREA --}}
    <div class="loginArea">

        {{!-- Header Area --}}
        <div class="headerArea">
            {{!-- Logo --}}
            <img src="img/recipeep-logo-blackorange.png" class="loginLogo">
        </div>
        <div class="headerArea">
            <div class="loginText">
                <p>Sign In</p>
            </div>
        </div>
        {{#if message}}
            <p class="headerArea">{{message}}</p>
        {{/if}}

        {{!-- Login Form --}}
        <div class="loginForm">

            {{!-- Form Start --}}
            <form class="form-signin" method="POST" action="/login">
                {{!-- Email Address --}}
                <div class="loginRow">
                    <label for="inputEmail"></label>
                    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email Address" required autofocus>
                </div>

                {{!-- Password --}}
                <div class="loginRow">
                    <label for="inputPassword"></label>
                    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                </div>
                
                {{!-- Form Button --}}
                <div class="formButton">
                    <button class="loginButton" type="submit" href="homepage">Sign In</button></a>
                </div> 
            </form>
        </div>

        <hr>

        {{!-- Redirect to Register --}}
        <div class="footLink">
            <a href="register">Not yet registered?</a>
        </div>
    </div>
</div>

{{!-- Cancel Modal Popup --}}
<div class="modal fade" id="login-not-success" tabindex="-1" role="dialog" aria-hidden="true">

    {{!-- Modal Dialogue Box --}}
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">

            {{!-- Modal Header --}}
            <div class="modal-header">
                <h5 class="modal-title">Login Unsuccessful</h5>
                <button class="close" type="button" data-dismiss="modal">
                    <span class="close-button">&times;</span>
                </button>
            </div>

            {{!-- Modal Body --}}
            <div class="modal-body">
                <p class="body-text"><span class="emp">Email</span> or <span class="emp">Password</span> used is not recognized.</p>                    
            </div>
        </div>
    </div>
</div>